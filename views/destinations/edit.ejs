<body class="add-destination-bg">

<h1 class="user-trips">Edit your destination</h1>

<form class="edit" action="/trips/<%= destination.trip %>/destinations/<%= destination.id%>" method="post">
  <input type="hidden" name="_method" value="put">
  <input type="hidden" name="lat" id="lat">
  <input type="hidden" name="long" id="long">
  <div class="form-group">
    <label for="name">Name</label>
    <input id="pac-input" class="form-control" type="text" placeholder="Search Box" name="name" value="<%= destination.name %>">
  </div>
  <div class="form-group">
    <label for="image">Image</label>
    <input type="text" name="image" value="<%= destination.image %>" class="form-control">
  </div>
  <div class="form-group">
    <label for="date">Date</label>
    <input type="text" name="date" value="<%= destination.date %>" class="form-control">
  </div>
  <div class="form-group">
    <label for="notes">Notes</label>
    <textarea name="notes" rows="4" cols="30" class="form-control"><%= destination.notes %></textarea>
  </div>
  <button class="btn btn-primary">Add</button>
</form>

<a href="/trips/<%= destination.trip %>/destinations/<%= destination.id %>" class="btn btn-primary">Back</a>
