<body class="trip-show-bg">

<ul>

  <h1 class="user-trips"><%= destination.name %></h1>
  <div class="row">
  <li class="col-lg-6"><img src="<%= destination.image %>" style=" width: 550px; height: 400px; border-radius: 5px; box-shadow: 0 0 5px 8px #e5e5e5; margin-top: 20px;"></li>
  <div class="col-lg-5" style="background-color: rgba(255,255,255,0.4); padding: 10px; border-radius: 5px; margin-top: 17px; height: 400px;">

  <li><%= destination.date %></li>
  <li>Notes: <%= destination.notes %></li>
  <a href="/trips/<%= destination.trip %>/destinations/<%= destination.id%>/edit" class="btn btn-primary" style="margin-left: 300px;">Edit</a>
</div>
</div>

</ul>

<script type="text/javascript">
  placeCoordinates = {
    lat: <%= destination.lat%>,
    lng: <%= destination.long%>
  }
</script>

<div id="map" style="margin-top: 60px;"></div>

<form class="" action="/trips/<%= destination.trip %>/destinations/<%= destination.id%>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input class="btn btn-primary" type="submit" value="Delete">
</form>

<a href="/trips/<%= destination.trip %>" class="btn btn-primary">Back</a>
